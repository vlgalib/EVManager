{
  "name": "evmanager",
  "version": "1.0.0",
  "description": "EVManager - Portfolio Management Tool",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "build": "cd backend && npm run build && cd ../frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run open-browser\"",
    "open-browser": "powershell -Command \"Start-Sleep 5; Start-Process http://localhost:5001\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "clean:install": "npm run clean && npm install"
  },
  "keywords": [
    "evmanager",
    "crypto",
    "dashboard",
    "analytics",
    "blockchain"
  ],
  "author": "vlgalib - https://t.me/NewbieIdeas",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
